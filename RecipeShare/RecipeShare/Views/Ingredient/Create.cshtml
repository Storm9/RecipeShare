@model RecipeShare.Models.Ingredient

@{
    Layout = null;
}

<div class="new-ingredient">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.Hidden("RecipeID", ViewData["RecipeID"])

    <span class="editor-field">
        @Html.EditorFor(model => model.Quantity)
        @Html.ValidationMessageFor(model => model.Quantity)
    </span>

    <span class="editor-field">
        @Html.DropDownList("MeasureID", String.Empty)
        @Html.ValidationMessageFor(model => model.MeasureID)
    </span>

    <span class="editor-field">
        @Html.DropDownList("IngredientNameID", String.Empty)
        @Html.ValidationMessageFor(model => model.IngredientNameID)
    </span>

    <span class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </span>
</div>
